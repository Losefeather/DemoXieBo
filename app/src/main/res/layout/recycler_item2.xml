<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_recyc_item2"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/boder"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_recycler_item2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="123"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_recycler_item2_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_recycler_item2_name"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_recycler_item2_staus1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="123"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/tv_recycler_item2_staus2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/tv_recycler_item2_staus1"
            android:layout_marginLeft="10dp"
            android:text="123"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" />
    </RelativeLayout>
</RelativeLayout>
